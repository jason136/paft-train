<mujoco model="mini_tars">
    <compiler angle="radian"/>  <!-- use radians to define angles -->
    <option>
        <!-- Note: if using mujoco version earlier than 3, set <option collision="predefined"/> instead -->
        <flag contact="disable"/>
    </option>
    <default>
        <!-- defaults for simple primitive geoms -->
        <geom type="box" density="100" rgba="0.7 0.7 0.7 1"/>
        <joint type="hinge" limited="true" axis="0 1 0" damping="2" frictionloss="0.05" armature="0.002"/>
        <!-- position servo defaults (PD) for PWM-like behavior -->
        <position kp="40" kv="8"/>
    </default>
    <!-- no mesh assets needed; using primitive boxes -->
    <worldbody>
        <!-- TARS body in real units (~0.42 m tall), prisms have 1:1:8 aspect -->
        <body name="tars" pos="0 0 0.21">
            <!-- Center piece: two prisms conjoined (width = 2 * 0.0525 = 0.105 m) -->
            <geom name="body_center" size="0.0525 0.02625 0.21" rgba="0.7 0.7 0.7 1"/>

            <!-- Left arm: single prism, unit width 0.0525 m; hinge at x = -0.0525 -->
            <body name="left_arm" pos="-0.0525 0 0">
                <joint name="left_hinge" type="hinge" axis="1 0 0" limited="true" range="-3.14159265 3.14159265"/>
                <geom name="left_arm_geom" size="0.02625 0.02625 0.21" pos="-0.02625 0 0" rgba="0.7 0.7 0.7 1"/>
            </body>

            <!-- Right arm: single prism, unit width 0.0525 m; hinge at x = +0.0525 -->
            <body name="right_arm" pos="0.0525 0 0">
                <joint name="right_hinge" type="hinge" axis="1 0 0" limited="true" range="-3.14159265 3.14159265"/>
                <geom name="right_arm_geom" size="0.02625 0.02625 0.21" pos="0.02625 0 0" rgba="0.7 0.7 0.7 1"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- Position servos: ctrl is target angle in rad (map your PWM to angle) -->
        <position name="left_arm_servo" joint="left_hinge" ctrllimited="true" ctrlrange="-3.14159265 3.14159265" forcerange="-5 5"/>
        <position name="right_arm_servo" joint="right_hinge" ctrllimited="true" ctrlrange="-3.14159265 3.14159265" forcerange="-5 5"/>
    </actuator>
</mujoco>
